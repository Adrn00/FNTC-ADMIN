<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"

        x:Class="FNTC.MainWindow"
        Title="FNTC">

	<!-- Main Grid: Sidebar + Content -->
	<Grid Classes="BGP" ColumnDefinitions="300, *" RowDefinitions="Auto, *">

		<!--SIDEBAR -->
		<Border Classes="Sidebar" >
			<!--SIDEBAR GRID-->
			<Grid RowDefinitions="*, Auto" Background="#F2F2F2">
				<!--SIDEBAR CONTENT-->
				<StackPanel Classes="SidebarContent" >
					<!--SIDEBAR LOGO-->
					<Image Source="avares://FNTC/Assets/Images/logo.png" Classes="Logo"/>

					<!-- MAIN MENU-->
					<StackPanel Spacing="20">
						<TextBlock Classes="sidebartext" Text="MAIN MENU" />

						<Button Classes="SidebarBT">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xe464;"/>
								<Label Classes="fontbt"	Content="Dashboard"/>
							</StackPanel>
						</Button>

						<Button Classes="SidebarBT" >
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xe2f8;"/>
								<Label Classes="fontbt"	Content="Subscription Management"/>
							</StackPanel>
						</Button>

						<Button Classes="SidebarBT">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xee42;"/>
								<Label Classes="fontbt"	Content="Billing and Invoice"/>
							</StackPanel>
						</Button>

						<Button Classes="SidebarBT" >
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xe68e;"/>
								<Label Classes="fontbt"	Content="Job Order"/>
							</StackPanel>
						</Button>
					</StackPanel>

					<!-- Divider line -->
					<Border Height="1" Background="#CCC" Margin="0,10" Width="203"/>

					<!-- GENERAL-->
					<StackPanel Spacing="20">
						<TextBlock Classes="sidebartext" Text="GENERAL" />
						<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xe3e8;"/>
								<Label Classes="fontbt"	Content="Support Service"/>
							</StackPanel>
						</Button>

						<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xe270;"/>
								<Label Classes="fontbt"	Content="Settings"/>
							</StackPanel>
						</Button>
					</StackPanel>
				</StackPanel>


				<!-- LOGOUT -->
				<Button Classes="SidebarBT" Grid.Row="1" Margin="15,0,0,15">
					<StackPanel Orientation="Horizontal">
						<Label Classes="icon" Content="&#xe42a;"/>
						<Label Classes="fontbt"	Content="Log Out"/>
					</StackPanel>
				</Button>
			</Grid>
		</Border>

		<!-- HEADER BAR-->
		<Border  Classes="Headerbar">
			<Grid ColumnDefinitions="*, Auto" VerticalAlignment="Center">

				<!-- DASHBOARD PANEL -->
				<StackPanel Classes="DashboardPanel">
					<!-- DASHBOARD TEXT-->
					<TextBlock Text="DASHBOARD" Classes="DBheader"/>

					<TextBlock Text="Hereâ€™s a quick overview of Active subscriptions." Classes="DBsubheader"/>
				</StackPanel>
				<!-- NOTIFICATION AND PROFILE PANEL -->
				<StackPanel Classes="NotificationProfilePanel">

					<!-- Notification Bell -->
					<Label Classes="notificationbell"
						   Content="&#xe5e8;"/>

					<!-- Profile Section -->
					<StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">

						<!-- Profile Circle -->
						<Border Width="40" Height="40"
								Background="White"
								CornerRadius="20"
								VerticalAlignment="Center">
							<TextBlock Text="A"
									   HorizontalAlignment="Center"
									   VerticalAlignment="Center"
									   FontWeight="Bold"
									   Foreground="Black"/>
						</Border>

						<!-- Profile Info -->
						<StackPanel>
							<TextBlock Text="Admin"
									   Foreground="White"
									   FontWeight="Bold"/>
							<TextBlock Text="Lawrence Adrian De Guzman"
									   Foreground="White"
									   FontSize="12"/>
						</StackPanel>
					</StackPanel>

				</StackPanel>
			</Grid>

		</Border>
		<!-- MAIN CONTENT AREA -->
		<Grid Grid.Row="1" Grid.Column="1" Margin="20">
			<!-- Horizontal StackPanel for 3 grids -->
			<StackPanel	VerticalAlignment="Top"	HorizontalAlignment="Left"	Spacing="10">

				<!-- Total Subscribers -->
				<Border Width="281" Height="135"	Background="#ECF9FB"	CornerRadius="10">
					<Grid>
						<TextBlock Text="Total Subscribers" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
					</Grid>
				</Border>

				<!-- New Subscribers this Month -->
				<Border Width="281" Height="135"
						Background="#ECF9FB"
						CornerRadius="10">
					<Grid>
						<TextBlock Text="New Subscribers"
								   VerticalAlignment="Center"
								   HorizontalAlignment="Center"
								   FontWeight="Bold"/>
					</Grid>
				</Border>

				<!-- Overdue Payments -->
				<Border Width="281" Height="135"
						Background="#ECF9FB"
						CornerRadius="10">
					<Grid>
						<TextBlock Text="Overdue Payments"
								   VerticalAlignment="Center"
								   HorizontalAlignment="Center"
								   FontWeight="Bold"/>
					</Grid>
				</Border>

			</StackPanel>
		</Grid>


	</Grid>
</Window>
