<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="1024"
        Width="1024" Height="600"
        x:Class="FNTC.MainWindow"
        Title="FNTC">

	<Grid RowDefinitions="60, *" ColumnDefinitions="300, *"
          Background="{DynamicResource ResourceKey=PrimaryBackground}">

		<!-- HEADER -->
		<Border Grid.Row="0" Grid.ColumnSpan="2"
                Background="#2C3E50" Height="60"
                VerticalAlignment="Top"
                Padding="15,0">
			<Grid ColumnDefinitions="*, Auto, Auto" VerticalAlignment="Center">

				<!-- FNTC Logo-->
				<Image Source="avares://FNTC/Assets/Images/logo.png" VerticalAlignment="Center" HorizontalAlignment="Left" Width="72" Height="40" />
				<!-- Right: Actions -->
				<StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="15" VerticalAlignment="Center">
					<!-- Notification Button -->
					<Button Background="Transparent" BorderThickness="0" ToolTip.Tip="Notifications">
						<Label Classes="icon" Content="&#xe7f4;" Foreground="White" FontSize="18"/>
					</Button>

					<!-- User Profile Button -->
					<Button Background="Transparent" BorderThickness="0" ToolTip.Tip="Profile">
						<Label Classes="icon" Content="&#xe77b;" Foreground="White" FontSize="18"/>
					</Button>
				</StackPanel>
			</Grid>
		</Border>

		<!-- SIDEBAR -->
		<Border Classes="Sidebar" Grid.Row="1" Grid.Column="0" >
			<Grid RowDefinitions="*, Auto">
				<StackPanel Grid.Row="0" Spacing="40">

					<!-- MENU -->
					<StackPanel Spacing="15">
						<Label Padding="25,15,0,0" Foreground="#6A6767" FontSize="16"> MENU</Label>

						<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xeb54;"/>
								<Label Content="Dashboard"/>
							</StackPanel>
						</Button>

						<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xe34e;"/>
								<Label Content="Subscription Management"/>
							</StackPanel>
						</Button>

						<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xee42;"/>
								<Label Content="Billing and Invoice"/>
							</StackPanel>
						</Button>

						<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xe584;"/>
								<Label Content="Support and Communication"/>
							</StackPanel>
						</Button>
					</StackPanel>

					<!-- GENERAL -->
					<StackPanel Spacing="15">
						<Label Padding="20,20,0,0" Foreground="#6A6767" FontSize="16"> GENERAL</Label>

						<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xe270;"/>
								<Label Content="Settings"/>
							</StackPanel>
						</Button>

						<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
							<StackPanel Orientation="Horizontal">
								<Label Classes="icon" Content="&#xe68e;"/>
								<Label Content="Job Orders"/>
							</StackPanel>
						</Button>
					</StackPanel>
				</StackPanel>

				<!-- LOGOUT -->
				<Button Classes="SidebarBT" Grid.Row="1" Margin="15,0,0,15">
					<StackPanel Orientation="Horizontal">
						<Label Classes="icon" Content="&#xe42a;"/>
						<Label Content="Log Out"/>
					</StackPanel>
				</Button>
			</Grid>
		</Border>

		<!-- MAIN CONTENT -->
		<Border Grid.Row="1" Grid.Column="1" Background="White" Margin="10" CornerRadius="8">
			<TextBlock Text="Main Content Area"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18"/>
		</Border>
	</Grid>
</Window>
