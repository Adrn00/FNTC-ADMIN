<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FNTC.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
		<StyleInclude Source="avares://FNTC/Styles/Styles1.axaml" />
	</Application.Styles>

	<Application.Resources>
		
		
		
		<!--button normal-->
		<SolidColorBrush x:Key="PrimaryBackgroundBT">#223A5F</SolidColorBrush>
		<SolidColorBrush x:Key="PrimaryForegroundBT">#FFFFFF</SolidColorBrush>
		
		<!--button hover-->
		<SolidColorBrush x:Key="PrimaryHoverBackgroundBT" Color="#FFFFFF" Opacity="0.21"/>
		<SolidColorBrush x:Key="PrimaryHoverForegroundBT" Color="#FFFFFF"/>

		<!--font-->
		<FontFamily x:Key="PrimaryFontFamily">Inter</FontFamily>

		<!--icons-->
		<FontFamily x:Key="PhosphorFill">Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
		<FontFamily x:Key="Phosphor">Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
	</Application.Resources>
</Application>