<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FNTC.App"
             RequestedThemeVariant="Default">

	<Application.Styles>
		<FluentTheme />
		<StyleInclude Source="avares://FNTC/Styles/Styles1.axaml" />
	</Application.Styles>

	<Application.Resources>
		<!-- button normal bg color -->
		<SolidColorBrush x:Key="colorbt" Color="#F2F2F2" />

		<!-- button hover bg color -->
		<SolidColorBrush x:Key="colotbthover" Color="#FFFFFF" />

		<!-- icons and fonts color bt -->
		<SolidColorBrush x:Key="iconfontcolor" Color="#A7A6AC" />

		<!-- icons and fonts color bt hover -->
		<SolidColorBrush x:Key="iconfontcolorhover" Color="#00ABB9" />

		<!-- font -->
		<FontFamily x:Key="FontFamilyBt">Inter</FontFamily>

		<!-- icons -->
		<FontFamily x:Key="PhosphorFill">avares://FNTC/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
		<FontFamily x:Key="Phosphor">avares://FNTC/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
	</Application.Resources>
</Application>
