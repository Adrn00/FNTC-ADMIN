<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia">
	    


	<Design.PreviewWith>
		
	</Design.PreviewWith>

	<!--  Styles -->
	<!--BGP-->
	<Style Selector="Grid.BGP">
		<Setter Property="Background" Value="#2A595F"></Setter>
	</Style>
	
	<!--SIDEBAR BORDER-->
	<Style Selector="Border.Sidebar">
		<Setter Property="Grid.Column" Value="0"> </Setter>
		<Setter Property="Grid.Row" Value="0"></Setter>
		<Setter Property="Grid.RowSpan" Value="2"></Setter>
		<Setter Property="VerticalAlignment" Value="Stretch"> </Setter>
		<Setter Property="HorizontalAlignment" Value="Stretch"> </Setter>
		<Setter	Property="CornerRadius" Value="10"></Setter>
	</Style>

	<!--SIDEBAR CONTENT-->
	<Style Selector="StackPanel.SidebarContent">
		<Setter Property="Spacing" Value="60"></Setter>
		<Setter Property="Background" Value="#F2F2F2"> </Setter>
	</Style>

	<!--SIDEBAR LOGO-->
	<Style Selector="Image.Logo">
		<Setter	Property="Width" Value="217"></Setter>
		<Setter Property="Height" Value="102"></Setter>
		<Setter Property="Margin" Value="15,50,15,15"></Setter>
		
	</Style>
	
	<!--SIDEBAR TEXT-->
	<Style Selector="TextBlock.sidebartext">
		<Setter Property="FontFamily" Value="{DynamicResource FontFamilyBt}"/>
		<Setter Property="Foreground" Value="#AFB7BC"/>
		<Setter Property="FontSize" Value="13"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Margin" Value="50,0,0,0"/>
	</Style>

	<!-- FONT BUTTON-->
	<Style Selector="Label.fontbt">
		<Setter Property="FontFamily" Value="{DynamicResource FontFamilyBt}"/>
		<Setter Property="FontSize" Value="15"/>
	    <Setter Property="FontWeight" Value="SemiBold"/>
	</Style>
	<!-- ICON BUTTON-->
	<Style Selector="Label.icon">
		<Setter Property="FontFamily" Value="{DynamicResource Phosphor}" />
		<Setter Property="FontSize" Value="18"></Setter>
		<Setter Property="Foreground" Value="{DynamicResource iconfontcolor}"/>
		<Setter Property="Margin" Value="0,2,0,0"/>
	</Style>
	
	<!-- ICON BUTTON HOVERED-->
	<Style Selector="Button:pointerover Label.icon">
		<Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}" />
		<Setter Property="Foreground" Value="{DynamicResource iconfontcolorhover}"/>
	</Style>

	<!--SIDEBAR BUTTONS-->
	<Style Selector="Button.SidebarBT">
		<Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
		<Setter Property="Width" Value="223"></Setter>
		<Setter Property="Height" Value="43"></Setter>
		<Setter Property="Background" Value="{DynamicResource colorbt}"></Setter>
		<Setter Property="Foreground" Value="{DynamicResource iconfontcolor}"/>
		
	</Style>

	<!--SIDEBAR BUTTONS HOVERED-->
	<Style Selector="Button:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource colotbthover}"/>
		<Setter Property="Foreground" Value="{DynamicResource iconfontcolorhover}"/>
		<Setter Property="BorderBrush" Value="#006D7A" />
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="10"/>
	</Style>

	<!--HEADER BAR-->
	<Style Selector="Border.Headerbar">
		<Setter Property="Grid.Row" Value="0"></Setter>
		<Setter Property="Grid.Column" Value="1"></Setter>
		<Setter Property="Background" Value="#2A595F"></Setter>
		<Setter Property="Padding" Value="25"></Setter>
		
	</Style>
	<!-- HEADER PANEL -->
	<Style Selector="StackPanel.HeaderPanel">
		<Setter Property="Orientation" Value="Vertical"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="Margin" Value="10,20,10,10"/>
	</Style>

	<!-- HEADER TEXTS-->
	<Style Selector="TextBlock.headertext">
		<Setter Property="FontSize" Value="32"/>
		<Setter Property="FontFamily" Value="Roboto"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Foreground" Value="White"/>
	</Style>
	<Style Selector="TextBlock.subheadertext">
		<Setter Property="FontSize" Value="15"/>
		<Setter Property="FontFamily" Value="Roboto"/>
		<Setter Property="FontWeight" Value="Regular"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Margin" Value="0,10,0,0"/>
	</Style>

	<!-- NOTIFICATION AND PROFILE PANEL -->
	<Style Selector="StackPanel.NotificationProfilePanel">
		<Setter Property="Grid.Column" Value="1"/>
		<Setter Property="Orientation" Value="Horizontal"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="Spacing" Value="20"/>
	</Style>

	<!-- Notification Bell -->
	<Style Selector="Label.notificationbell">
		<Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}"/>
		<Setter	Property="VerticalAlignment" Value="Center"/>
		<Setter	Property="Foreground" Value="Black"/>
		<Setter	Property="FontSize" Value="30"/>
	</Style>

	<!-- Notification Profile Panel -->
	<Style Selector="StackPanel.NotificationProfilePanel">
		<Setter Property="Orientation" Value="Horizontal"/>
		<Setter Property="Spacing" Value="15"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<!-- Notification Bell -->
	<Style Selector="Label.notificationbell">
		<Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}" />
		<Setter Property="FontSize" Value="24"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<!-- Profile Circle -->
	<Style Selector="Border.ProfileCircle">
		<Setter Property="Width" Value="40"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="Background" Value="White"/>
		<Setter Property="CornerRadius" Value="20"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<!-- Profile Initial (letter A) -->
	<Style Selector="TextBlock.ProfileInitial">
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Foreground" Value="Black"/>
	</Style>

	<!-- Profile Name (Admin) -->
	<Style Selector="TextBlock.ProfileName">
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

	<!-- Profile Full Name -->
	<Style Selector="TextBlock.ProfileFullName">
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="FontSize" Value="12"/>
	</Style>

	<!-- Main Content Area -->
	<Style Selector="Grid.MaincontentArea">
		<Setter Property="Margin" Value="20"/>
	</Style>

	<!-- StackPanel that holds the cards -->
	<Style Selector="StackPanel.CardStack">
		<Setter Property="Spacing" Value="10"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
	</Style>

	<!-- Dashboard Card Style -->
	<Style Selector="Border.DashboardCard">
		<Setter Property="Width" Value="281"/>
		<Setter Property="Height" Value="135"/>
		<Setter Property="Background" Value="#ECF9FB"/>
		<Setter Property="CornerRadius" Value="10"/>
		
	</Style>

	<!-- Card Title Text -->
	<Style Selector="TextBlock.CardTitle">
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Foreground" Value="#333"/>
	</Style>

	<!-- Chart Card -->
	<Style Selector="Border.DashboardChartCard">
		<Setter Property="Width" Value="1280"/>
		<Setter Property="Height" Value="426"/>
		<Setter Property="Background" Value="#FFFFFF"/>
		<Setter Property="CornerRadius" Value="10"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
	</Style>

	<!-- Chart Header Title -->
	<Style Selector="TextBlock.ChartTitle">
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Foreground" Value="#02131A"/>
	</Style>

	<!-- Chart Icon -->
	<Style Selector="Label.chartIcon">
		<Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}" />
		<Setter Property="FontSize" Value="20"/>
		<Setter Property="Foreground" Value="#02131A"/>
	</Style>

	<!-- Chart Container -->
	<Style Selector="Border.ChartContainer">
		<Setter Property="Background" Value="#F9FBFD"/>
		<Setter Property="CornerRadius" Value="8"/>
	</Style>

	<!-- Y-Axis Labels -->
	<Style Selector="TextBlock.YAxisLabel">
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="Foreground" Value="#666"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
	</Style>

	<!-- X-Axis Labels -->
	<Style Selector="TextBlock.XAxisLabel">
		<Setter Property="FontSize" Value="12"/>
		<Setter Property="Foreground" Value="#333"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="Margin" Value="0,4,0,0"/>
	</Style>
	
	<!-- Card Style for Donut Chart -->
	<Style Selector="Border.SubscriptionCard">
		<Setter Property="Width" Value="700"/>
		<Setter Property="Height" Value="420"/>
		<Setter Property="Background" Value="#FFFF"/>
		<Setter Property="CornerRadius" Value="10"/>
		<Setter Property="VerticalAlignment" Value="Bottom"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
	</Style>

	<!-- Header Text for Donut chart -->
	<Style Selector="TextBlock.CardHeader">
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Foreground" Value="#111827"/>
		<Setter Property="HorizontalAlignment" Value="Center"></Setter>

	</Style>

	<!-- Donut Center Text -->
	<Style Selector="TextBlock.DonutCenterText">
		<Setter Property="FontSize" Value="13"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<!-- Legend Container -->
	<Style Selector="StackPanel.DonutLegend">
		<Setter Property="Orientation" Value="Horizontal"/>
		<Setter Property="Spacing" Value="16"/>
		<Setter Property="Margin" Value="100,120,0,0"/>
	</Style>

	<!-- Legend Item -->
	<Style Selector="StackPanel.LegendItem">
		<Setter Property="Orientation" Value="Horizontal"/>
		<Setter Property="Spacing" Value="8"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
	</Style>

	<!-- Legend Color Box -->
	<Style Selector="Rectangle.LegendColor">
		<Setter Property="Width" Value="14"/>
		<Setter Property="Height" Value="14"/>
		<Setter Property="RadiusX" Value="3"/>
		<Setter Property="RadiusY" Value="3"/>
	</Style>



</Styles>
