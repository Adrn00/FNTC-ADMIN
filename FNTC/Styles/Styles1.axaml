<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia">

	<Design.PreviewWith>
		<Grid Classes="BGP" ColumnDefinitions="300, *" RowDefinitions="Auto, *" Width="1920" Height="1080">

			<!--SIDEBAR -->
			<Border Classes="Sidebar" >
				<!--SIDEBAR GRID-->
				<Grid RowDefinitions="*, Auto" Background="#F2F2F2">
					<!--SIDEBAR CONTENT-->
					<StackPanel Classes="SidebarContent" >
						<!--SIDEBAR LOGO-->
						<Image Source="avares://FNTC/Assets/Images/logo.png" Classes="Logo"/>

						<!-- MAIN MENU-->
						<StackPanel Spacing="20">
							<TextBlock Classes="sidebartext" Text="MAIN MENU" />

							<Button Classes="SidebarBT">
								<StackPanel Orientation="Horizontal">
									<Label Classes="icon" Content="&#xe464;"/>
									<Label Classes="fontbt"	Content="Dashboard"/>
								</StackPanel>
							</Button>

							<Button Classes="SidebarBT" >
								<StackPanel Orientation="Horizontal">
									<Label Classes="icon" Content="&#xe2f8;"/>
									<Label Classes="fontbt"	Content="Subscription Management"/>
								</StackPanel>
							</Button>

							<Button Classes="SidebarBT">
								<StackPanel Orientation="Horizontal">
									<Label Classes="icon" Content="&#xee42;"/>
									<Label Classes="fontbt"	Content="Billing and Invoice"/>
								</StackPanel>
							</Button>

							<Button Classes="SidebarBT" >
								<StackPanel Orientation="Horizontal">
									<Label Classes="icon" Content="&#xe68e;"/>
									<Label Classes="fontbt"	Content="Job Order"/>
								</StackPanel>
							</Button>
						</StackPanel>

						<!-- Divider line -->
						<Border Height="1" Background="#CCC" Margin="0,10" Width="203"/>

						<!-- GENERAL-->
						<StackPanel Spacing="20">
							<TextBlock Classes="sidebartext" Text="GENERAL" />
							<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
								<StackPanel Orientation="Horizontal">
									<Label Classes="icon" Content="&#xe3e8;"/>
									<Label Classes="fontbt"	Content="Support Service"/>
								</StackPanel>
							</Button>

							<Button Classes="SidebarBT" HorizontalAlignment="Stretch">
								<StackPanel Orientation="Horizontal">
									<Label Classes="icon" Content="&#xe270;"/>
									<Label Classes="fontbt"	Content="Settings"/>
								</StackPanel>
							</Button>
						</StackPanel>
					</StackPanel>


					<!-- LOGOUT -->
					<Button Classes="SidebarBT" Grid.Row="1" Margin="15,0,0,15">
						<StackPanel Orientation="Horizontal">
							<Label Classes="icon" Content="&#xe42a;"/>
							<Label Classes="fontbt"	Content="Log Out"/>
						</StackPanel>
					</Button>
				</Grid>
			</Border>

			<!-- HEADER BAR-->
			<Border  Classes="Headerbar">
				<Grid ColumnDefinitions="*, Auto" VerticalAlignment="Center">

					<!-- DASHBOARD PANEL -->
					<StackPanel Classes="HeaderPanel">
						<!-- DASHBOARD TEXT-->
						<TextBlock Text="DASHBOARD" Classes="headertext"/>

						<TextBlock Text="Hereâ€™s a quick overview of Active subscriptions." Classes="subheadertext"/>
					</StackPanel>
					<!-- NOTIFICATION AND PROFILE PANEL -->
					<StackPanel Classes="NotificationProfilePanel">

						<!-- Notification Bell -->
						<Label Classes="notificationbell"
							   Content="&#xe5e8;"/>

						<!-- Profile Section -->
						<StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">

							<!-- Profile Circle -->
							<Border Width="40" Height="40"
									Background="White"
									CornerRadius="20"
									VerticalAlignment="Center">
								<TextBlock Text="A"
										   HorizontalAlignment="Center"
										   VerticalAlignment="Center"
										   FontWeight="Bold"
										   Foreground="Black"/>
							</Border>

							<!-- Profile Info -->
							<StackPanel>
								<TextBlock Text="Admin"
										   Foreground="White"
										   FontWeight="Bold"/>
								<TextBlock Text="Lawrence Adrian De Guzman"
										   Foreground="White"
										   FontSize="12"/>
							</StackPanel>
						</StackPanel>

					</StackPanel>
				</Grid>

			</Border>

			<!-- DASBOARD CONTENTS -->
			<Grid Grid.Row="1" Grid.Column="1" Margin="20">
				<!-- Horizontal StackPanel for 3 cards -->
				<StackPanel Classes="CardStack">

					<!-- Total Subscribers -->
					<Border Classes="DashboardCard">
						<Grid>
							<TextBlock Text="Total Subscribers" Classes="CardTitle"/>
						</Grid>
					</Border>

					<!-- New Subscribers -->
					<Border Classes="DashboardCard">
						<Grid>
							<TextBlock Text="New Subscribers" Classes="CardTitle"/>
						</Grid>
					</Border>

					<!-- Overdue Payments -->
					<Border Classes="DashboardCard">
						<Grid>
							<TextBlock Text="Overdue Payments" Classes="CardTitle"/>
						</Grid>
					</Border>

				</StackPanel>

				<!-- Monthly Subscription by Plan -->
				<Border Classes="DashboardChartCard">
					<Grid RowDefinitions="Auto,*">

						<!-- Header -->
						<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="10">
							<Label Classes="chartIcon" Content="&#xe150;"/>
							<TextBlock Text="Monthly Subscription by Plan" Classes="ChartTitle"/>
						</StackPanel>

						<!-- Chart Area -->
						<Grid Grid.Row="1" Margin="40,10,20,40">

							<!-- Y-Axis Labels -->
							<StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="-35,0,0,0" Spacing="20">
								<TextBlock Text="50" Classes="YAxisLabel"/>
								<TextBlock Text="40" Classes="YAxisLabel"/>
								<TextBlock Text="30" Classes="YAxisLabel"/>
								<TextBlock Text="20" Classes="YAxisLabel"/>
								<TextBlock Text="10" Classes="YAxisLabel"/>
								<TextBlock Text="0"  Classes="YAxisLabel"/>
							</StackPanel>

							<!-- Bars + Months -->
							<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Spacing="25">

								<!-- FEB -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="120" Fill="#02131A"/>
										<!-- Bronze = 20 -->
										<Rectangle Width="12" Height="180" Fill="#094C66"/>
										<!-- Silver = 30 -->
										<Rectangle Width="12" Height="240" Fill="#435E61"/>
										<!-- Gold = 40 -->
										<Rectangle Width="12" Height="300" Fill="#13A4FF"/>
										<!-- Diamond = 50 -->
										<Rectangle Width="12" Height="60"  Fill="#63D3FF"/>
										<!-- Platinum = 10 -->
									</StackPanel>
									<TextBlock Text="Feb" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- MAR -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="60"  Fill="#02131A"/>
										<!-- Bronze = 10 -->
										<Rectangle Width="12" Height="150" Fill="#094C66"/>
										<!-- Silver = 25 -->
										<Rectangle Width="12" Height="210" Fill="#435E61"/>
										<!-- Gold = 35 -->
										<Rectangle Width="12" Height="270" Fill="#13A4FF"/>
										<!-- Diamond = 45 -->
										<Rectangle Width="12" Height="90"  Fill="#63D3FF"/>
										<!-- Platinum = 15 -->
									</StackPanel>
									<TextBlock Text="Mar" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- APR -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="90"  Fill="#02131A"/>
										<!-- Bronze = 15 -->
										<Rectangle Width="12" Height="210" Fill="#094C66"/>
										<!-- Silver = 35 -->
										<Rectangle Width="12" Height="120" Fill="#435E61"/>
										<!-- Gold = 20 -->
										<Rectangle Width="12" Height="300" Fill="#13A4FF"/>
										<!-- Diamond = 50 -->
										<Rectangle Width="12" Height="180" Fill="#63D3FF"/>
										<!-- Platinum = 30 -->
									</StackPanel>
									<TextBlock Text="Apr" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- MAY -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="240" Fill="#02131A"/>
										<!-- Bronze = 40 -->
										<Rectangle Width="12" Height="300" Fill="#094C66"/>
										<!-- Silver = 50 -->
										<Rectangle Width="12" Height="60"  Fill="#435E61"/>
										<!-- Gold = 10 -->
										<Rectangle Width="12" Height="120" Fill="#13A4FF"/>
										<!-- Diamond = 20 -->
										<Rectangle Width="12" Height="180" Fill="#63D3FF"/>
										<!-- Platinum = 30 -->
									</StackPanel>
									<TextBlock Text="May" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- JUN -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="60"  Fill="#02131A"/>
										<!-- Bronze = 10 -->
										<Rectangle Width="12" Height="120" Fill="#094C66"/>
										<!-- Silver = 20 -->
										<Rectangle Width="12" Height="300" Fill="#435E61"/>
										<!-- Gold = 50 -->
										<Rectangle Width="12" Height="180" Fill="#13A4FF"/>
										<!-- Diamond = 30 -->
										<Rectangle Width="12" Height="240" Fill="#63D3FF"/>
										<!-- Platinum = 40 -->
									</StackPanel>
									<TextBlock Text="Jun" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- JUL -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="300" Fill="#02131A"/>
										<!-- Bronze = 50 -->
										<Rectangle Width="12" Height="240" Fill="#094C66"/>
										<!-- Silver = 40 -->
										<Rectangle Width="12" Height="180" Fill="#435E61"/>
										<!-- Gold = 30 -->
										<Rectangle Width="12" Height="120" Fill="#13A4FF"/>
										<!-- Diamond = 20 -->
										<Rectangle Width="12" Height="60"  Fill="#63D3FF"/>
										<!-- Platinum = 10 -->
									</StackPanel>
									<TextBlock Text="Jul" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- AUG -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="90"  Fill="#02131A"/>
										<!-- Bronze = 15 -->
										<Rectangle Width="12" Height="150" Fill="#094C66"/>
										<!-- Silver = 25 -->
										<Rectangle Width="12" Height="210" Fill="#435E61"/>
										<!-- Gold = 35 -->
										<Rectangle Width="12" Height="270" Fill="#13A4FF"/>
										<!-- Diamond = 45 -->
										<Rectangle Width="12" Height="300" Fill="#63D3FF"/>
										<!-- Platinum = 50 -->
									</StackPanel>
									<TextBlock Text="Aug" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- SEP -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="180" Fill="#02131A"/>
										<!-- Bronze = 30 -->
										<Rectangle Width="12" Height="240" Fill="#094C66"/>
										<!-- Silver = 40 -->
										<Rectangle Width="12" Height="300" Fill="#435E61"/>
										<!-- Gold = 50 -->
										<Rectangle Width="12" Height="120" Fill="#13A4FF"/>
										<!-- Diamond = 20 -->
										<Rectangle Width="12" Height="60"  Fill="#63D3FF"/>
										<!-- Platinum = 10 -->
									</StackPanel>
									<TextBlock Text="Sep" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- OCT -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="60"  Fill="#02131A"/>
										<!-- Bronze = 10 -->
										<Rectangle Width="12" Height="300" Fill="#094C66"/>
										<!-- Silver = 50 -->
										<Rectangle Width="12" Height="240" Fill="#435E61"/>
										<!-- Gold = 40 -->
										<Rectangle Width="12" Height="180" Fill="#13A4FF"/>
										<!-- Diamond = 30 -->
										<Rectangle Width="12" Height="120" Fill="#63D3FF"/>
										<!-- Platinum = 20 -->
									</StackPanel>
									<TextBlock Text="Oct" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- NOV -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="300" Fill="#02131A"/>
										<!-- Bronze = 50 -->
										<Rectangle Width="12" Height="90"  Fill="#094C66"/>
										<!-- Silver = 15 -->
										<Rectangle Width="12" Height="150" Fill="#435E61"/>
										<!-- Gold = 25 -->
										<Rectangle Width="12" Height="210" Fill="#13A4FF"/>
										<!-- Diamond = 35 -->
										<Rectangle Width="12" Height="270" Fill="#63D3FF"/>
										<!-- Platinum = 45 -->
									</StackPanel>
									<TextBlock Text="Nov" Classes="XAxisLabel"/>
								</StackPanel>

								<!-- DEC -->
								<StackPanel Orientation="Vertical" HorizontalAlignment="Center">
									<StackPanel Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
										<Rectangle Width="12" Height="150" Fill="#02131A"/>
										<!-- Bronze = 25 -->
										<Rectangle Width="12" Height="210" Fill="#094C66"/>
										<!-- Silver = 35 -->
										<Rectangle Width="12" Height="270" Fill="#435E61"/>
										<!-- Gold = 45 -->
										<Rectangle Width="12" Height="300" Fill="#13A4FF"/>
										<!-- Diamond = 50 -->
										<Rectangle Width="12" Height="60"  Fill="#63D3FF"/>
										<!-- Platinum = 10 -->
									</StackPanel>
									<TextBlock Text="Dec" Classes="XAxisLabel"/>
								</StackPanel>

							</StackPanel>
						</Grid>
					</Grid>
				</Border>

				<!-- Subscription Donut Chart -->
				<Border Classes="SubscriptionCard">
					<StackPanel>
						<!-- Header -->
						<TextBlock Classes="CardHeader" Text="Subscription Distribution"/>

						<!-- Donut Chart -->
						<Grid Width="200" Height="200" HorizontalAlignment="Center">
							<Canvas>
								<!-- Donut slices -->
								<Path Fill="#02131A" Data="M100,100 L100,0 A100,100 0 0,1 195.11,69.10 L147.55,84.55 A50,50 0 0,0 100,50 Z"/>
								<Path Fill="#094C66" Data="M100,100 L195.11,69.10 A100,100 0 0,1 160.45,193.53 L130.22,146.77 A50,50 0 0,0 100,50 Z"/>
								<Path Fill="#435E61" Data="M100,100 L160.45,193.53 A100,100 0 0,1 39.55,193.53 L69.78,146.77 A50,50 0 0,0 100,50 Z"/>
								<Path Fill="#13A4FF" Data="M100,100 L39.55,193.53 A100,100 0 0,1 4.89,69.10 L52.45,84.55 A50,50 0 0,0 100,50 Z"/>
								<Path Fill="#74D6FD" Data="M100,100 L4.89,69.10 A100,100 0 0,1 100,0 L100,50 A50,50 0 0,0 100,50 Z"/>

								<!-- Inner circle for donut -->
								<Ellipse Width="120" Height="120" Fill="White" Canvas.Left="40" Canvas.Top="40"/>
							</Canvas>

							<!-- Center total -->
							<TextBlock Classes="DonutCenterText" Text="500 Subscribers"/>
						</Grid>

						<!-- Legend -->
						<StackPanel Classes="DonutLegend">
							<StackPanel Classes="LegendItem">
								<Rectangle Classes="LegendColor" Fill="#02131A"/>
								<TextBlock Text="BRONZE"/>
							</StackPanel>
							<StackPanel Classes="LegendItem">
								<Rectangle Classes="LegendColor" Fill="#094C66"/>
								<TextBlock Text="SILVER"/>
							</StackPanel>
							<StackPanel Classes="LegendItem">
								<Rectangle Classes="LegendColor" Fill="#435E61"/>
								<TextBlock Text="GOLD"/>
							</StackPanel>
							<StackPanel Classes="LegendItem">
								<Rectangle Classes="LegendColor" Fill="#13A4FF"/>
								<TextBlock Text="DIAMOND"/>
							</StackPanel>
							<StackPanel Classes="LegendItem">
								<Rectangle Classes="LegendColor" Fill="#74D6FD"/>
								<TextBlock Text="PLATINUM"/>
							</StackPanel>
						</StackPanel>
					</StackPanel>
				</Border>

			</Grid>


		</Grid>
		
	</Design.PreviewWith>

	<!--  Styles -->
	<!--BGP-->
	<Style Selector="Grid.BGP">
		<Setter Property="Background" Value="#07B2C6"></Setter>
	</Style>
	
	<!--SIDEBAR BORDER-->
	<Style Selector="Border.Sidebar">
		<Setter Property="Grid.Column" Value="0"> </Setter>
		<Setter Property="Grid.Row" Value="0"></Setter>
		<Setter Property="Grid.RowSpan" Value="2"></Setter>
		<Setter Property="VerticalAlignment" Value="Stretch"> </Setter>
		<Setter Property="HorizontalAlignment" Value="Stretch"> </Setter>
		<Setter	Property="CornerRadius" Value="10"></Setter>
	</Style>

	<!--SIDEBAR CONTENT-->
	<Style Selector="StackPanel.SidebarContent">
		<Setter Property="Spacing" Value="60"></Setter>
		<Setter Property="Background" Value="#F2F2F2"> </Setter>
	</Style>

	<!--SIDEBAR LOGO-->
	<Style Selector="Image.Logo">
		<Setter	Property="Width" Value="217"></Setter>
		<Setter Property="Height" Value="102"></Setter>
		<Setter Property="Margin" Value="15,50,15,15"></Setter>
		
	</Style>
	
	<!--SIDEBAR TEXT-->
	<Style Selector="TextBlock.sidebartext">
		<Setter Property="FontFamily" Value="{DynamicResource FontFamilyBt}"/>
		<Setter Property="Foreground" Value="#AFB7BC"/>
		<Setter Property="FontSize" Value="13"/>
		<Setter Property="FontWeight" Value="Medium"/>
		<Setter Property="Margin" Value="50,0,0,0"/>
	</Style>

	<!-- FONT BUTTON-->
	<Style Selector="Label.fontbt">
		<Setter Property="FontFamily" Value="{DynamicResource FontFamilyBt}"/>
		<Setter Property="FontSize" Value="15"/>
	    <Setter Property="FontWeight" Value="SemiBold"/>
	</Style>
	<!-- ICON BUTTON-->
	<Style Selector="Label.icon">
		<Setter Property="FontFamily" Value="{DynamicResource Phosphor}" />
		<Setter Property="FontSize" Value="18"></Setter>
		<Setter Property="Foreground" Value="{DynamicResource iconfontcolor}"/>
		<Setter Property="Margin" Value="0,2,0,0"/>
	</Style>
	
	<!-- ICON BUTTON HOVERED-->
	<Style Selector="Button:pointerover Label.icon">
		<Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}" />
		<Setter Property="Foreground" Value="{DynamicResource iconfontcolorhover}"/>
	</Style>

	<!--SIDEBAR BUTTONS-->
	<Style Selector="Button.SidebarBT">
		<Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
		<Setter Property="Width" Value="223"></Setter>
		<Setter Property="Height" Value="43"></Setter>
		<Setter Property="Background" Value="{DynamicResource colorbt}"></Setter>
		<Setter Property="Foreground" Value="{DynamicResource iconfontcolor}"/>
		
	</Style>

	<!--SIDEBAR BUTTONS HOVERED-->
	<Style Selector="Button:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="{DynamicResource colotbthover}"/>
		<Setter Property="Foreground" Value="{DynamicResource iconfontcolorhover}"/>
		<Setter Property="BorderBrush" Value="#006D7A" />
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="CornerRadius" Value="10"/>
	</Style>

	<!--HEADER BAR-->
	<Style Selector="Border.Headerbar">
		<Setter Property="Grid.Row" Value="0"></Setter>
		<Setter Property="Grid.Column" Value="1"></Setter>
		<Setter Property="Background" Value="#07B2C6"></Setter>
		<Setter Property="Padding" Value="25"></Setter>
		
	</Style>
	<!-- HEADER PANEL -->
	<Style Selector="StackPanel.HeaderPanel">
		<Setter Property="Orientation" Value="Vertical"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="Margin" Value="10,20,10,10"/>
	</Style>

	<!-- HEADER TEXTS-->
	<Style Selector="TextBlock.headertext">
		<Setter Property="FontSize" Value="32"/>
		<Setter Property="FontFamily" Value="Roboto"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Foreground" Value="White"/>
	</Style>
	<Style Selector="TextBlock.subheadertext">
		<Setter Property="FontSize" Value="15"/>
		<Setter Property="FontFamily" Value="Roboto"/>
		<Setter Property="FontWeight" Value="Regular"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Margin" Value="0,10,0,0"/>
	</Style>

	<!-- NOTIFICATION AND PROFILE PANEL -->
	<Style Selector="StackPanel.NotificationProfilePanel">
		<Setter Property="Grid.Column" Value="1"/>
		<Setter Property="Orientation" Value="Horizontal"/>
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="Spacing" Value="20"/>
	</Style>

	<!-- Notification Bell -->
	<Style Selector="Label.notificationbell">
		<Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}"/>
		<Setter	Property="VerticalAlignment" Value="Center"/>
		<Setter	Property="Foreground" Value="Black"/>
		<Setter	Property="FontSize" Value="30"/>
	</Style>

	<!-- Notification Profile Panel -->
	<Style Selector="StackPanel.NotificationProfilePanel">
		<Setter Property="Orientation" Value="Horizontal"/>
		<Setter Property="Spacing" Value="15"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<!-- Notification Bell -->
	<Style Selector="Label.notificationbell">
		<Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}" />
		<Setter Property="FontSize" Value="24"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<!-- Profile Circle -->
	<Style Selector="Border.ProfileCircle">
		<Setter Property="Width" Value="40"/>
		<Setter Property="Height" Value="40"/>
		<Setter Property="Background" Value="White"/>
		<Setter Property="CornerRadius" Value="20"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>

	<!-- Profile Initial (letter A) -->
	<Style Selector="TextBlock.ProfileInitial">
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Foreground" Value="Black"/>
	</Style>

	<!-- Profile Name (Admin) -->
	<Style Selector="TextBlock.ProfileName">
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>

	<!-- Profile Full Name -->
	<Style Selector="TextBlock.ProfileFullName">
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="FontSize" Value="12"/>
	</Style>

	<!-- Main Content Area -->
	<Style Selector="Grid.MaincontentArea">
		<Setter Property="Margin" Value="20"/>
	</Style>

	<!-- StackPanel that holds the cards -->
	<Style Selector="StackPanel.CardStack">
		<Setter Property="Spacing" Value="10"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
	</Style>

	<!-- Dashboard Card Style -->
	<Style Selector="Border.DashboardCard">
		<Setter Property="Width" Value="281"/>
		<Setter Property="Height" Value="135"/>
		<Setter Property="Background" Value="#ECF9FB"/>
		<Setter Property="CornerRadius" Value="10"/>
		
	</Style>

	<!-- Card Title Text -->
	<Style Selector="TextBlock.CardTitle">
		<Setter Property="HorizontalAlignment" Value="Center"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Foreground" Value="#333"/>
	</Style>

	<!-- Chart Card -->
	<Style Selector="Border.DashboardChartCard">
		<Setter Property="Width" Value="1280"/>
		<Setter Property="Height" Value="426"/>
		<Setter Property="Background" Value="#FFFFFF"/>
		<Setter Property="CornerRadius" Value="10"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="HorizontalAlignment" Value="Right"/>
	</Style>

	<!-- Chart Header Title -->
	<Style Selector="TextBlock.ChartTitle">
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="FontWeight" Value="Bold"/>
		<Setter Property="Foreground" Value="#02131A"/>
	</Style>

	<!-- Chart Icon -->
	<Style Selector="Label.chartIcon">
		<Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}" />
		<Setter Property="FontSize" Value="20"/>
		<Setter Property="Foreground" Value="#02131A"/>
